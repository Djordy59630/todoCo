{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i class="fa-solid fa-user"></i></div>
                <h1 class="fw-bolder">Liste des utilisateurs</h1>
                <a class="btn btn-primary" href="{{ path('app_user_new') }}">CrÃ©er un utilisateur</a>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Edition</th>
                   
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('app_user_edit', {'id' : user.id}) }}" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                        
                    </tr>
                {% endfor %}
                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
