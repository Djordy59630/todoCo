{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}

<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i
                        class="fa-solid fa-list"></i></div>
                <h1 class="fw-bolder">Liste des tâches</h1>
                <a class="btn btn-primary" href="{{ path('app_task_new') }}">Créer une tâche</a>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Titre</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Edition</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Supprimer</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for task in tasks %}
                                <tr>
                                    <th>{{ task.title }}</th>
                                    <td>{{ task.content }}</td>
                                    <td><a class="btn btn-primary"
                                            href="{{ path('app_task_edit', {'id' : task.id }) }}"><i
                                                class="fa-solid fa-pen-to-square"></i></a></td>
                                    <td>
                                        <form action="{{ path('app_task_toggle', {'id' : task.id }) }}">
                                            <button class="btn btn-success">
                                                {% if not task.isDone %} <i
                                                    class="fa-solid fa-toggle-on"></i>{% else %}Marquer non
                                                terminée{% endif %}
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}"
                                            onsubmit="return confirm('Etes vous certain de vouloir supprimer cette tâche');">
                                            <input type="hidden" name="_token"
                                                value="{{ csrf_token('delete' ~ task.id) }}">
                                            <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-primary my-3" href="{{ path('app_task_index') }}">Retour à la liste des tâches</a>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}