{% extends 'base.html.twig' %}

{% block title %}Connexion - Todo & Co{% endblock %}

{% block body %}

<section class="py-5">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i
                        class="fa-solid fa-right-to-bracket"></i></div>
                <h1 class="fw-bolder" id="title">Connexion</h1>
                <p class="lead fw-normal text-muted mb-0">Connectez-vous pour accéder à votre compte Todo & Co et gérer
                    vos tâches en toute sécurité</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">

                    <form method="post">
                        {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                        {% endif %}

                        <div class="my-3">
                            <label for="inputEmail">Email :</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="my-3">
                            <label for="inputPassword">Mot de passe :</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg btn-primary my-3" type="submit">
                            Se connecter
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}